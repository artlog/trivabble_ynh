#!/bin/bash

#=================================================
# GENERIC START
#=================================================
# IMPORT GENERIC HELPERS
#=================================================

#Keep this path for calling _common.sh inside the execution's context of backup and restore scripts
source ../settings/scripts/_common.sh
source /usr/share/yunohost/helpers

#=================================================
# MANAGE SCRIPT FAILURE
#=================================================

ynh_clean_setup () {
	#### Remove this function if there's nothing to clean before calling the remove script.
	true
}
# Exit if an error occurs during the execution of the script
ynh_abort_if_errors

#=================================================
# LOAD SETTINGS
#=================================================
ynh_script_progression "Loading settings..." --time --weight=1

domain=$(ynh_app_setting_get --app=$app --key=domain)
path_url=$(ynh_app_setting_get --app=$app --key=path)

restore_config_only=No
if [[ -d $install_dir ]]
then
    ynh_print_info "installation directory $install_dir already exists ! restoring only config"
    restore_config_only=Yes
fi

username=$app
groupname=$app

#=================================================
# CHECK IF THE APP CAN BE RESTORED
#=================================================
ynh_script_progression "Validating restoration parameters..." --time --weight=1

#=================================================
# STANDARD RESTORATION STEPS
#=================================================
# RESTORE THE NGINX CONFIGURATION
#=================================================

ynh_restore "/etc/nginx/conf.d/$domain.d/$app.conf"

#=================================================
# RESTORE THE APP MAIN DIR
#=================================================
ynh_script_progression "Restoring the app main directory..." --time --weight=1

if [[ "$restore_config_only" == "Yes" ]]
then
    # was for config only
    ynh_print_info "Restoring only configuration restore_config_only=$restore_config_only"
    ynh_restore "$install_dir/public/config.js"
    ynh_restore "$install_dir/server/games.backup.json"
else
    # restore full path
    ynh_restore "$install_dir"
fi

#=================================================
# RECREATE THE DEDICATED USER
#=================================================
ynh_script_progression "Recreating the dedicated system user..." --time --weight=1

# Create the dedicated user (if not existing)
ynh_system_user_create --username=$username

#=================================================
# RESTORE USER RIGHTS
#=================================================

# Restore permissions on app files
chown -R root $install_dir
# required x access to enter it as trivabble system user for node
chmod 755 $install_dir

# Set permissions to app files
chown -R www-data:www-data $install_dir
chown -R $username:$groupname $install_dir/server

#=================================================
# RESTORE SYSTEMD
#=================================================
ynh_script_progression "Restoring the systemd configuration..." --time --weight=1

ynh_restore "/etc/systemd/system/$app.service"
systemctl enable $app.service

#=================================================
# INTEGRATE SERVICE IN YUNOHOST
#=================================================

yunohost service add $app --description "A short description of the app" --log "/var/log/$app/$app.log"

#=================================================
# START SYSTEMD SERVICE
#=================================================
ynh_script_progression "Starting a systemd service..." --time --weight=1

ynh_systemctl --service=$app --action="start" --log_path="/var/log/$app/$app.log"

#=================================================
# RESTORE THE LOGROTATE CONFIGURATION
#=================================================

ynh_restore "/etc/logrotate.d/$app"

#=================================================
# GENERIC FINALIZATION
#=================================================
# RELOAD NGINX
#=================================================
ynh_script_progression "Reloading nginx web server and php-fpm..." --time --weight=1

ynh_systemctl --service=nginx --action=reload

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Restoration completed for $app" --time --last
